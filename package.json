{
	"name": "electron-react-template",
	"version": "1.0.0",
	"description": "an electron app template using react",
	"main": ".electron/main.js",
	"author": {
		"email": "kofiamo.timothy@gmail.com",
		"name": "Amo Timothy Kofi"
	},
	"license": "MIT",
	"private": true,
	"scripts": {
		"build": "yarn compile:prod && electron-builder",
		"start": "concurrently \"yarn webpack:serve\" \"yarn electron:start\"",
		"electron:start": "wait-on http://localhost:3000 && electron .",
		"compile": "webpack --config scripts/webpack.config.ts",
		"webpack:serve": "webpack serve --config scripts/webpack.config.ts",
		"compile:prod": "rimraf .electron && cross-env NODE_ENV=production yarn compile"
	},
	"dependencies": {
		"electron-is-dev": "1.2.0",
		"react": "17.0.1",
		"react-dom": "17.0.1"
	},
	"devDependencies": {
		"@babel/core": "7.12.3",
		"@babel/plugin-transform-runtime": "7.12.1",
		"@babel/preset-env": "7.12.1",
		"@babel/preset-react": "7.12.5",
		"@babel/preset-typescript": "7.12.1",
		"@babel/runtime": "7.12.5",
		"@types/express": "4.17.9",
		"@types/html-webpack-plugin": "3.2.4",
		"@types/mini-css-extract-plugin": "1.2.1",
		"@types/node": "14.14.7",
		"@types/react": "16.9.56",
		"@types/react-dom": "16.9.9",
		"@types/terser-webpack-plugin": "5.0.2",
		"@types/webpack": "4.41.25",
		"@types/webpack-dev-server": "3.11.1",
		"@types/webpack-node-externals": "2.5.0",
		"@typescript-eslint/eslint-plugin": "4.8.1",
		"@typescript-eslint/parser": "4.8.1",
		"babel-loader": "8.2.1",
		"concurrently": "5.3.0",
		"cross-env": "7.0.2",
		"css-loader": "5.0.1",
		"electron": "11.0.2",
		"electron-builder": "22.9.1",
		"eslint": "7.13.0",
		"eslint-plugin-react": "7.21.5",
		"eslint-plugin-react-hooks": "4.2.0",
		"file-loader": "6.2.0",
		"fork-ts-checker-webpack-plugin": "6.0.3",
		"html-webpack-plugin": "5.0.0-alpha.14",
		"mini-css-extract-plugin": "1.3.1",
		"rimraf": "3.0.2",
		"terser-webpack-plugin": "5.0.3",
		"ts-loader": "8.0.11",
		"ts-node": "9.0.0",
		"typescript": "4.0.5",
		"wait-on": "5.2.0",
		"webpack": "5.4.0",
		"webpack-cli": "4.2.0",
		"webpack-dev-server": "3.11.0",
		"webpack-node-externals": "2.5.2"
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"build": {
		"appId": "com.electron.app",
		"productName": "Electron App",
		"copyright": "Copyright Â© year ${author}",
		"directories": {
			"buildResources": ".electron",
			"output": "build"
		}
	}
}
